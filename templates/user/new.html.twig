{% extends 'base.html.twig' %}

{% block title %}common{% endblock %}

{% block body %}
<div class="bg-common">
<div class="container-form-common">
<div class="commonForm">
 <img src="{{asset('/build/images/banner-logo.svg')}}" alt="chef">
{{ form_start(form , {'attr':{'class':'form'}}) }}

<div class="form-groups">
    {{form_label(form.email)}}
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
</div>
<div class="form-groups">
    {{form_label(form.pseudo)}}
    {{ form_widget(form.pseudo) }}
     {{ form_errors(form.pseudo) }}
</div>
<div class="form-groups">
     {{ form_label(form.city) }}
    {{ form_widget(form.city) }}
    {{ form_errors(form.city) }}
</div>
<div class="form-groups">
    {{ form_label(form.password.first) }}
    {{ form_widget(form.password.first) }}
    {{ form_label(form.password.second) }}
    {{ form_widget(form.password.second) }}
    {{ form_errors(form.password.first) }}
</div>
<div class="form-group">
      {{ form_label(form.isResto) }}
      {{ form_widget(form.isResto) }}
      {{ form_errors(form.isResto) }}
</div>
    {# {{form_rest(form)}} #}
    <button class="btn">
    {% trans %}
        S'inscrire
    {% endtrans %}
    </button>
{{ form_end(form) }}

<div class="info-form-user">
<span> 
{% trans %}
En m'inscrivant, je confirme que j'ai accepté :
{% endtrans %}
</span>
<ul>
    <li>
        <a href="{{path('app_terms')}}">
        {% trans %}
            les Termes et conditions de Tolink
        {% endtrans %}
        </a>
    </li>
     <li>
        <a href="{{path('app_policy')}}">
        {% trans %}
        avoir lu la Politique de confidentialité
        {% endtrans %}
        </a>
    </li>
</ul>
</div>
</div>

</div>
</div>
{% endblock %}
