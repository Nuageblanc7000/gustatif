{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Mise à jour du mot de passe{% endtrans %}
{% endblock %}

{% block body %}
	<div class="bg-style-create">
		<div class="container-resto-form">
			<div class="title">
				<h1>
					{% trans %}
					Mise à jour du mot de passe
					{% endtrans %}
					</h1>
			</div>
			<div class="form-step">
				{{form_start(form)}}
				<div class="form-create-error">
					{{form_errors(form.password)}}
				</div>
				<div class="form-groups create-form-coord">
					<div class="container-design-form">
						<h2>{% trans %}Mot de passe{% endtrans %}</h2>
						<div class="design-form-input">
							<div class="design-form-icon anim-icon">
								<img src="{{asset('/build/images/profil/password.svg')}}" alt="chef icon" width="40px" height="40px">
							</div>
							{{ form_widget(form.password.first) }}
						</div>
						<div class="form-create-error">
							{{ form_errors(form.password.first) }}
						</div>
					</div>

					<div class="container-design-form">
						<h2>{% trans %}Confirmation{% endtrans %}</h2>
						<div class="design-form-input">
							<div class="design-form-icon ">
								<img src="{{asset('/build/images/profil/password.svg')}}" alt="badge avec tête" width="40px" height="40px">
							</div>
							{{ form_widget(form.password.second) }}
						</div>
						<div class="form-create-error">
							{{ form_errors(form.password.second) }}
						</div>
					</div>


				</div>


				<div class="container-btn-action-form">

					<div class="button-container-2">
						<span class="mas">
							{% trans %}
							Retour vers le profil
							{% endtrans %}
						</span>
						<a href="{{path('app_profil')}}" name="Hover">
							{% trans %}
							Retour vers le profil
							{% endtrans %}
						</a>
					</div>
					<div class="button-container-1">
						<span class="mas-1">
							{% trans %}
							Mettre à jour
							{% endtrans %}
						</span>
						<button type="submit" name="Hover">
							{% trans %}
							Mettre à jour
							{% endtrans %}
						</button>
					</div>
				</div>
				{{form_rest(form)}}
				{{form_end(form)}}
			</div>
		</div>
	</diV>
{% endblock %}
